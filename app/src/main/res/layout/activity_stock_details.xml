        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--custom:layout_column="1"-->
        <!--custom:layout_row="2" />-->

        <!--<TextView-->
        <!--android:id="@+id/stockNameLabel"-->
