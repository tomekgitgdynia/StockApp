<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    style="@style/MainPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/symbolName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp" />

    <com.tomk.android.stockapp.mainActivity.GraphChart
        android:id="@+id/Graph"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#2b2b2b"
        android:padding="10dp"
        custom:barWidth="1dp"
        custom:bottomMargin="25dp"
        custom:boxColor="#ffffff"
        custom:graphBackColor="#ff00ff"
        custom:graphColor="#f0fff0"
        custom:graphComponentBackColor="#2b2b2b"
        custom:leftMargin="1dp"
        custom:rightMargin="10dp"
        custom:textColor="#ffffff"
        custom:textSize="12sp"
        custom:topMargin="10dp" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/detailsGridL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/minLBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:layout_column="0"
            custom:layout_row="0" />

        <TextView
            android:id="@+id/minValueTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:layout_column="1"
            custom:layout_row="0" />

        <TextView
            android:id="@+id/maxLBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:layout_column="0"
            custom:layout_row="1" />

        <TextView
            android:id="@+id/maxTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:layout_column="1"
            custom:layout_row="1" />


        <TextView
            android:id="@+id/dateLBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:layout_column="0"
            custom:layout_row="2" />

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:layout_column="1"
            custom:layout_row="2" />

        <!--<TextView-->
